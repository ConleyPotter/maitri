<% include partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Maitri Mosaics</p>
			<div class="list-group">
				<li class="list-group-item active">Item 1</li>
				<li class="list-group-item">Item 2</li>
				<li class="list-group-item">Item 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= listing.image %>">
				<div class="caption-full">
					<h4 class="pull-right">$<%= price %></h4>
					<h4><a href="#"><%= listing.title %></a></h4>
					<p><%= listing.description %></p>
				</div>
			</div> <!-- end of thumbnail -->
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/listings/<%= listing._id %>/comments/new">
						Add New Comment
					</a>
					<% listing.comments.forEach(function(comment) { %>
						<div class="row">
							<div class="col-md-12">
								<strong><%= comment.author %></strong>
								<span class="pull-right">
									10 Days Ago
								</span>
								<p>
									<%= comment.text %>
								</p>
							</div>
						</div>
					<% }) %>
				</div>
			</div>
		</div>
	</div>
</div>

<% include partials/footer %>