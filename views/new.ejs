<% include partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create a new listing</h1>
		<div style="width: 37.5%; margin: 25px auto;">
			<form action="/listings" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="listing[title]" placeholder="Title">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="listing[image]" placeholder="Image URL">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="listing[description]" placeholder="Description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
				<a href="/listings">Go Back</a>
			</form>
		</div>
		
	</div> <!-- end of row -->
</div>



<% include partials/footer %>