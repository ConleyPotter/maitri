<% include ./partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">
		Edit: <%= listing.title %>
	</div>
	<form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<div class="form-control">
				<label>Title</label>
				<input type="text" name="listing[title]" value="<%= listing.title %>">
			</div>		
		</div>

		<div class="form-group">
			<div class="form-control">
				<label>Image</label>
				<input type="text" name="listing[image]" placeholder="<%= listing.image %>">
			</div>	
		</div>

		<div class="form-group">
			<div class="form-control">
				<label>Listing Description</label>
				<textarea name="listing[body]"><%= listing.description %></textarea>
			</div>
		</div>

		<input type="submit" class="btn btn-lg btn-default btn-block btn-primary">
	</form>
</div>

<% include ./partials/footer %>